<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_card"
    tools:context=".MenuBeer">


    <View
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"

        />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/headerContainer"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/backbutton" />

    <TextView
        android:id="@+id/restaurantTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="@string/title"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/headerContainer"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerContainer"

        />


    <!--  ITAIPAVA  -->
    <View
        android:id="@+id/itaipava"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/itaipavaImg"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:src="@drawable/beeritaipava"
        android:background="@drawable/rounded_corners"
        app:layout_constraintStart_toStartOf="@+id/itaipava"
        app:layout_constraintTop_toTopOf="@+id/itaipava"
        app:layout_constraintEnd_toEndOf="@+id/itaipava"

        android:contentDescription="@string/beerItaipavaDesc" />

    <TextView
        android:id="@+id/itaipavaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerItaipava"
        app:layout_constraintStart_toStartOf="@+id/itaipava"
        app:layout_constraintTop_toBottomOf="@+id/itaipavaImg"
        app:layout_constraintEnd_toEndOf="@+id/itaipava"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/beerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer2"
        app:layout_constraintStart_toStartOf="@+id/itaipava"
        app:layout_constraintTop_toBottomOf="@+id/itaipavaName"
        app:layout_constraintEnd_toEndOf="@+id/itaipava"
        android:textColor="@color/description"
        android:fontFamily="@font/interbold"
        android:textSize="15sp"

        />

    <View
        android:id="@+id/wrapPrice"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/itaipava"
        app:layout_constraintTop_toBottomOf="@+id/beerDescription"
        app:layout_constraintEnd_toEndOf="@+id/itaipava"
        app:layout_constraintBottom_toBottomOf="@+id/itaipava"
        android:background="@drawable/rounded_price"

        />

    <TextView
        android:id="@+id/itaipavaPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerItaipavaPrice"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/itaipava"
        app:layout_constraintTop_toBottomOf="@+id/beerDescription"
        app:layout_constraintEnd_toEndOf="@+id/itaipava"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        />



    <!--  BUDWEISER -->
    <View
        android:id="@+id/budweiser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginTop="20dp"
        />

    <!--  budweiserImg  -->
    <ImageView
        android:id="@+id/budweiserImg"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:src="@drawable/beerbudweiser"
        android:background="@drawable/rounded_corners"
        app:layout_constraintStart_toStartOf="@+id/budweiser"
        app:layout_constraintTop_toTopOf="@+id/budweiser"
        app:layout_constraintEnd_toEndOf="@+id/budweiser"
        android:contentDescription="@string/beerBudweiserDesc" />


    <!--  budweiserName  -->
    <TextView
        android:id="@+id/budweiserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerBudweiser"
        app:layout_constraintStart_toStartOf="@+id/budweiser"
        app:layout_constraintTop_toBottomOf="@+id/budweiserImg"
        app:layout_constraintEnd_toEndOf="@+id/budweiser"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"

        />

    <!--  budweiserDescription  -->
    <TextView
        android:id="@+id/budweiserDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer2"
        app:layout_constraintStart_toStartOf="@+id/budweiser"
        app:layout_constraintTop_toBottomOf="@+id/budweiserName"
        app:layout_constraintEnd_toEndOf="@+id/budweiser"
        android:textColor="@color/description"
        android:fontFamily="@font/interbold"
        android:textSize="15sp"

        />

    <!--  budweiserWrap  -->
    <View
        android:id="@+id/budweiserWrap"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/budweiser"
        app:layout_constraintTop_toBottomOf="@+id/budweiserDescription"
        app:layout_constraintEnd_toEndOf="@+id/budweiser"
        app:layout_constraintBottom_toBottomOf="@+id/budweiser"
        android:background="@drawable/rounded_price"

        />


    <!--  budweiserPrice  -->
    <TextView
        android:id="@+id/budweiserPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerBudweiserPrice"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/budweiser"
        app:layout_constraintTop_toBottomOf="@+id/budweiserDescription"
        app:layout_constraintEnd_toEndOf="@+id/budweiser"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        />



    <!-- HEINEKEN -->
    <View
        android:id="@+id/heineken"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/itaipava"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginTop="20dp"
        />

    <!--  heinekenImg  -->
    <ImageView
        android:id="@+id/heinekenImg"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:src="@drawable/beerheineken"
        android:background="@drawable/rounded_corners"
        app:layout_constraintStart_toStartOf="@+id/heineken"
        app:layout_constraintTop_toTopOf="@+id/heineken"
        app:layout_constraintEnd_toEndOf="@+id/heineken"
        android:contentDescription="@string/beerHeinekenDesc" />


    <!--  heinekenName  -->
    <TextView
        android:id="@+id/heinekenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerHeineken"
        app:layout_constraintStart_toStartOf="@+id/heineken"
        app:layout_constraintTop_toBottomOf="@+id/heinekenImg"
        app:layout_constraintEnd_toEndOf="@+id/heineken"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"

        />

    <!--  heinekenDescription  -->
    <TextView
        android:id="@+id/heinekenDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer2"
        app:layout_constraintStart_toStartOf="@+id/heineken"
        app:layout_constraintTop_toBottomOf="@+id/heinekenName"
        app:layout_constraintEnd_toEndOf="@+id/heineken"
        android:textColor="@color/description"
        android:fontFamily="@font/interbold"
        android:textSize="15sp"

        />

    <!--  heinekenWrap  -->
    <View
        android:id="@+id/heinekenWrap"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/heineken"
        app:layout_constraintTop_toBottomOf="@+id/heinekenDescription"
        app:layout_constraintEnd_toEndOf="@+id/heineken"
        app:layout_constraintBottom_toBottomOf="@+id/heineken"
        android:background="@drawable/rounded_price"

        />


    <!--  heinekenPrice  -->
    <TextView
        android:id="@+id/heinekenPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerHeinekenPrice"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/heineken"
        app:layout_constraintTop_toBottomOf="@+id/heinekenDescription"
        app:layout_constraintEnd_toEndOf="@+id/heineken"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        />


    <!--  STELLA ARTOIS -->
    <View
        android:id="@+id/stellaArtois"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_card"
        app:layout_constraintTop_toBottomOf="@+id/budweiser"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginTop="20dp"
        />

    <!--  stellaArtoisImg  -->
    <ImageView
        android:id="@+id/stellaArtoisImg"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:src="@drawable/beerstellaartois"
        android:background="@drawable/rounded_corners"
        app:layout_constraintStart_toStartOf="@+id/stellaArtois"
        app:layout_constraintTop_toTopOf="@+id/stellaArtois"
        app:layout_constraintEnd_toEndOf="@+id/stellaArtois"
        android:contentDescription="@string/beerStellaArtoisDesc" />


    <!--  StellaArtoisName  -->
    <TextView
        android:id="@+id/stellaArtoisName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerStellaArtois"
        app:layout_constraintStart_toStartOf="@+id/stellaArtois"
        app:layout_constraintTop_toBottomOf="@+id/stellaArtoisImg"
        app:layout_constraintEnd_toEndOf="@+id/stellaArtois"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"

        />

    <!--  stellaArtoisDescription  -->
    <TextView
        android:id="@+id/stellaArtoisDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer2"
        app:layout_constraintStart_toStartOf="@+id/stellaArtois"
        app:layout_constraintTop_toBottomOf="@+id/stellaArtoisName"
        app:layout_constraintEnd_toEndOf="@+id/stellaArtois"
        android:textColor="@color/description"
        android:fontFamily="@font/interbold"
        android:textSize="15sp"

        />

    <!--  stellaArtoisWrap  -->
    <View
        android:id="@+id/stellaArtoisWrap"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/stellaArtois"
        app:layout_constraintTop_toBottomOf="@+id/stellaArtoisDescription"
        app:layout_constraintEnd_toEndOf="@+id/stellaArtois"
        app:layout_constraintBottom_toBottomOf="@+id/stellaArtois"
        android:background="@drawable/rounded_price"

        />


    <!--  stellaArtoisPrice  -->
    <TextView
        android:id="@+id/stellaArtoisPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beerStellaArtoisPrice"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/stellaArtois"
        app:layout_constraintTop_toBottomOf="@+id/stellaArtoisDescription"
        app:layout_constraintEnd_toEndOf="@+id/stellaArtois"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        android:textSize="20sp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>